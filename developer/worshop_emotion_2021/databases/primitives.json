{
    "animation":{
        "description":"Perform an animation",
        "input":"dropdown",
        "input_options":[
            "bored",
            "confused",
            "curious",
            "dance",
            "disco",
            "elephant",
            "excited",
            "fear",
            "happy",
            "hello",
            "hug",
            "kisses"
        ],
        "options":{
            "time":"seconds"
        },
        "primitive":"Animation",
        "type":"output"
    },
    "change_leds":{
        "description":"Change the color of the robot leds using a RGB format",
        "input":"dropdown",
        "input_options":[
            "eyes",
            "all"
        ],
        "options":{
            "B":"percentage",
            "G":"percentage",
            "R":"percentage",
            "time":"seconds"
        },
        "primitive":"Change leds",
        "type":"output"
    },
    "close_hand":{
        "description":"Close robot's hand",
        "input":"dropdown",
        "input_options":[
            "both",
            "right",
            "left"
        ],
        "primitive":"Close hand",
        "type":"output"
    },
    "human_detected":{
        "description":"Is human detected with the camera?",
        "input":"dropdown",
        "input_options":[
            "yes",
            "no"
        ],
