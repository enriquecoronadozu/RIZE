        "type":"output"
    },
    "turn":{
        "description":"Turn robot body",
        "input":"dropdown",
        "input_options":[
            "left",
            "right"
        ],
        "options":{
            "degrees":"degrees"
        },
        "primitive":"Turn",
        "type":"output"
    },
    "wait":{
        "description":"Wait some seconds",
