        "type":"output"
    },
    "touched":{
        "description":"Is robot touched",
        "input":"dropdown",
        "input_options":[
            "head",
            "right_hand",
            "left_hand"
        ],
        "primitive":"Touched",
        "type":"input"
    },
    "track_people_with":{
        "description":"Track human",
        "input":"dropdown",
        "input_options":[
            "WholeBody",
            "Head",
